{
  "name": "todo-backend",
  "version": "1.0.0",
  "description": "Backend API for Todo App with real-time sync",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:debug": "tsx watch --inspect src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:reset": "tsx src/scripts/reset.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "docker:build": "docker build -t todo-backend .",
    "docker:run": "docker run -p 3001:3001 todo-backend"
  },
  "keywords": [
    "todo",
    "api",
    "typescript",
    "postgresql",
    "redis",
    "websocket",
    "real-time"
  ],
  "author": "Todo App Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/websocket": "^10.0.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/static": "^7.0.4",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "pg": "^8.12.0",
    "redis": "^4.7.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8",
    "uuid": "^10.0.0",
    "dotenv": "^16.4.5",
    "winston": "^3.14.2",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "nodemailer": "^6.9.14",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5",
    "ws": "^8.18.0",
    "bull": "^4.16.1",
    "prometheus-api-metrics": "^3.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "@types/pg": "^8.11.6",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/uuid": "^10.0.0",
    "@types/nodemailer": "^6.4.15",
    "@types/multer": "^1.4.11",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "tsx": "^4.16.5",
    "vitest": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "rimraf": "^6.0.1",
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/todo-app/backend.git"
  },
  "bugs": {
    "url": "https://github.com/todo-app/backend/issues"
  },
  "homepage": "https://github.com/todo-app/backend#readme"
}